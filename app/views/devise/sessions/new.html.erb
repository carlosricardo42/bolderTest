<div class="row">
  <div class="col-sm-12 col-md-offset-2 col-md-6 col-lg-offset-4 col-lg-4">
      <div class=" card card-block">
        <div class="card card-container">
          <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
          <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
          <p id="profile-name" class="profile-name-card"></p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
            <span id="reauth-email" class="reauth-email"></span>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", placeholder: "Email address", required: true %>
            </div>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", type: "password", class: "form-control", placeholder: "Password", required: true  %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div><!-- /card-container -->
    </div>
  </div>
</div>
